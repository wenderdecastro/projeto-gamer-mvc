@model Team

@{
    ViewData["Title"] = "Team";
}

<h1>Teams</h1>

<form method="post" action='@Url.Action("Register")' enctype="multipart/form-data">

    <input type="text" placeholder="Name" name="Name" required>
    <input type="file" name="Image">

    <button type="submit">Submit</button>

</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>Image</th>
        <th>Actions</th>
    </thead>
    <tbody>

        @foreach (Team team in ViewBag.Team)
            {
        <tr>
            <td>@team.Id</td>
            <td>@team.Name</td>
            <td>
                <img src="/img/Teams/@team.Image" alt="team @team.Image image" width="50px">
            </td>
            <td>
                <a asp-area="" asp-controller="Team" asp-action="Delete" asp-route-id="@team.Id"><button class="btn btn-danger">Delete</button></a> 
                <a asp-area="" asp-controller="Team"  asp-action="Edit" asp-route-id="@team.Id"><button class="btn btn-primary">Edit</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>

