@model Player

@{
    ViewData["Title"] = "Player";
}

<h1>@ViewData["Title"]</h1>

<div>
    
    <form method="post" action='@Url.Action("Register")' enctype="multipart/form-data">

    <select name="PlayerTeam" required>

        @foreach (Team t in ViewBag.Team)
        {
            <option value="@t.Id">@t.Name</option>
        }

    </select>

    <input type="text" placeholder="Name" name="Name" required>
    <input type="email" placeholder="Email" name="Email" required>
    <input type="password" placeholder="Password" name="Password" required>

    <button type="submit">Submit</button>

    </form>

    <table class="table table-striped table-responsive">
    <thead>
        <th>Team Image</th>
        <th>Player Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Id</th>
        <th>Team Name</th>
        <th>Actions</th>
    </thead>
    <tbody>

        @foreach (Player player in ViewBag.Player)
            {
        <tr>
            <td> <img width="50px" src="/img/Teams/@player.Team.Image" alt=""></td>
            <td>@player.PlayerId</td>
            <td>@player.Name</td>
            <td>@player.Email</td>  
            <td>@player.Id</td>
            <td>@player.Team.Name</td>
            <td>
                <a asp-area="" asp-controller="Player" asp-action="Delete" asp-route-id="@player.PlayerId"><button class="btn btn-danger">Delete</button></a> 
                <a asp-area="" asp-controller="Player"  asp-action="Edit" asp-route-id="@player.PlayerId"><button class="btn btn-primary">Edit</button></a>
            </td>
        </tr>
        }
    </tbody>
</table>

</div>