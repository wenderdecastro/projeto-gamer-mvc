@model Player

@{
    ViewData["Title"] = "Login";
}

<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gamer</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>



    <main class="fundo-login">
        <div class="bkg-login">
            <form class="frm-login" method="post" action='@Url.Action("SignIn")'>
                <div class="login-title">
                    <hr class="login-line">
                    <h1>Login</h1>
                </div>
                <div class="frm-linha">
                    <div class="bkg-input">
                        <img src="~/assets/vector-user.svg" alt="ícone de usuário">
                        <input type="email" id="email" name="Email" placeholder="Digite seu e-mail:" required>
                    </div>
                </div>
                <div class="frm-linha">
                    <div class="bkg-input">
                        <img src="~/assets/vector-key.svg" alt="ícone de chave">
                        <input type="password" id="password" name="Password" placeholder="Digite sua senha:" required>
                    </div>
                </div>

                <button type="submit" class="btn-logar">Logar</button>

                <h2>@TempData.Peek("Message")</h2>
            </form>
        </div>

    </main>
    </html>